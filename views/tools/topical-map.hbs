<div class="card">
    <div class="card-body">
        <h2 class="card-title mb-4">Topical Map Generator</h2>
        <!-- Tabs -->
        <ul class="nav nav-tabs mb-3" id="mapTabs" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" 
                        id="fatjoe-tab" 
                        data-bs-toggle="tab" 
                        data-bs-target="#fatjoe" 
                        type="button" 
                        role="tab">
                    FatJoe
                </button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" 
                        id="instantpersonas-tab" 
                        data-bs-toggle="tab" 
                        data-bs-target="#instantpersonas" 
                        type="button" 
                        role="tab">
                    InstantPersonas
                </button>
            </li>
        </ul>
        
        <!-- Tab Content -->
        <div class="tab-content" id="mapTabsContent">
            <!-- FatJoe Tab -->
            <div class="tab-pane fade show active" id="fatjoe" role="tabpanel">
                <div class="ratio ratio-16x9">
                    <iframe 
                        src="https://fatjoe.com/tools/topical-map-generator/" 
                        title="FatJoe Topical Map Generator"
                        allowfullscreen
                        style="border: 0;"
                    ></iframe>
                </div>
            </div>
            
            <!-- InstantPersonas Tab -->
            <div class="tab-pane fade" id="instantpersonas" role="tabpanel">
                <div class="ratio ratio-16x9">
                    <iframe 
                        src="https://instantpersonas.com/tools/topical-authority" 
                        title="InstantPersonas Topical Authority Builder"
                        allowfullscreen
                        style="border: 0;"
                    ></iframe>
                </div>
            </div>
        </div>
    </div>
</div>

{{#section 'scripts'}}
<script>
    $(document).ready(function() {
        // Initialize tooltips if needed
        const tooltips = document.querySelectorAll('[data-bs-toggle="tooltip"]');
        tooltips.forEach(tooltip => new bootstrap.Tooltip(tooltip));
        
        // Handle tab changes
        $('#mapTabs button').on('click', function (e) {
            e.preventDefault();
            $(this).tab('show');
        });
    });
</script>
{{/section}} 